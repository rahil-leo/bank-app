<section>
    <div class="container">
        <div class="row justify-content-center align-items-center min-vh-100">
            <div class="col-12 col-md-6">
                <form action="/bank/deposite" method="post" class="p-4 shadow rounded bg-light">
                    <h3 class="text-center mb-4">deposit Money</h3>

                    <div class="form-group">
                        <input type="number" name="accountnumber" class="form-control" placeholder="Account Number"
                            required >
                    </div>

                    <div class="form-group">
                        <input type="number" name="amount" class="form-control" placeholder="Amount" required min="1" max="10000">
                    </div>

                    <button type="submit" class="btn btn-success btn-block">Submit</button>
                </form>
            </div>
        </div>
    </div>
</section>

